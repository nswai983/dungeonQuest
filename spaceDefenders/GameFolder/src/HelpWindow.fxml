                <HBox fx:id="vboxInstruction3" >
                    <Label fx:id="lblInstruction3" style="-fx-text-fill: rgb(56, 96, 141)"/>
                </HBox>
                <ImageView><image><Image url="@images/type2_var2.png" /></image></ImageView>
                <HBox fx:id="vboxInstruction4" >
                    <Label fx:id="lblInstruction4" style="-fx-text-fill: rgb(56, 96, 141)"/>
                </HBox>
                <HBox fx:id="vboxInstruction5" >
                    <Label fx:id="lblInstruction5" style="-fx-text-fill: rgb(56, 96, 141)"/>
